# ============================================
# SELF-HOSTED API CONFIGURATION (RECOMMENDED)
# ============================================
# Use your own API server - NO external API keys needed!
# See SELF_HOSTED_API_SETUP.md for setup instructions

USE_SELF_HOSTED_API=true
SELF_HOSTED_API_URL=http://localhost:8000
SELF_HOSTED_API_KEY=  # Optional: for authentication

# ============================================
# EXTERNAL API KEYS (LEGACY - OPTIONAL)
# ============================================
# Only needed if USE_SELF_HOSTED_API=false

# LLM API Keys (Choose one or more)
OPENAI_API_KEY=your_openai_key_here
GROQ_API_KEY=your_groq_key_here

# Search API Keys (Choose one)
SERPER_API_KEY=your_serper_key_here
TAVILY_API_KEY=your_tavily_key_here

# Image Verification API (Optional)
TINEYE_API_KEY=your_tineye_key_here

# Configuration (Optional)
MAX_CLAIMS_PER_ARTICLE=10
MAX_EVIDENCE_PER_CLAIM=5
MINIMUM_CREDIBILITY_THRESHOLD=0.3
NLI_MODEL_NAME=facebook/bart-large-mnli
CACHE_TTL_HOURS=24
REQUEST_TIMEOUT_SECONDS=10
